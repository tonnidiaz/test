{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "dist",
        "paths": { "@/*": ["src/*"], "~/*": ["src/*"], "*": ["node_modules/*", "src/types/*"] },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true ,
        "sourceMap": true

    },  
    "include": ["src/**/*.ts", "./*.ts"]
}
  